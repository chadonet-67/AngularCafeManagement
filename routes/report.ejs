<html>
    <head>
        <style>
            table{
                font-family: Arial, Helvetica, sans-serif;
                width: 100%;
                border-collapse: collapse;
            }
            td,th{
             border: 1px solid #dddd;
             text-align: left;
             padding: 8px;
            }
            
        </style>
    </head>
    <body>
        <h3 style="text-align: center;">cafe management system</h3>
           <table>
               <tr>
                   <th>Name: <%= name %></th>
                   <th>Email: <%= email %></th>
            </tr>
            <tr>
                <th>Contact Number: <%= contactNumber %></th>
                <th>Payement Method: <%= payementMethod %></th>
         </tr>
           </table>
           

           <h3>Product Details</h3>
           <table>
               <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Sub total</th>
               </tr>
              <% if(productDetails.length > 0) { %>
                  <% productDetails.forEach (product =>{ %>
                    <tr>
                        <td><%= product.name %></td>
                        <td><%= product.category %></td>
                        <td><%= product.quantity %></td>
                        <td><%= product.price %></td>
                        <td><%= product.total %></td>
                    </tr>
                    <%});%>
                    <%}%>
           </table>
           <h3><%= totalAmount %></h3>
           <h3>Thank you for visiting site. please try again</h3>
    </body>
</html>